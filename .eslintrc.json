{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "avoid",
                "semi": true,
                "useTabs": false,
                "tabWidth": 2,
                "printWidth": 200,
                "singleQuote": true,
                "trailingComma": "all",
                "endOfLine": "auto"
            }
              
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "arrow-parens": 0,
        "react/function-component-definition": 0,
        "linebreak-style": 0,
        "arrow-body-style": 0,
        "import/prefer-default-export": 0, 
        "no-plusplus": 0,
        "react/prop-types": 0,
        "no-console": 0,
        "react/button-has-type": 0,
        "react/jsx-no-constructed-context-values": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx"],
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    }
}
